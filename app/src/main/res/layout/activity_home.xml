<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_home_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Cycling"/>

    <Button
        android:id="@+id/btn_home_profile"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_start"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_home_logout"
        app:layout_constraintTop_toBottomOf="@+id/btn_home_start"
        app:layout_constraintStart_toEndOf="@id/btn_home_profile"
        android:text="logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>